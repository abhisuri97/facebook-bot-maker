{
  "env": {
    "node": true
  },
  "rules": {
    "brace-style": [2, "1tbs"],
    "camelcase": 0,
    "no-alert": 2,
    "no-bitwise": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-lonely-if": 2,
    "no-loop-func": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-tabs": 2,
    "no-underscore-dangle": 0,
    "quote-props": [2, "as-needed"],
    "quotes": [2, "single", "avoid-escape"],
    "space-after-function": 2,
    "space-after-keywords": 2,
    "space-before-blocks": 2,
    "space-infix-ops": 2,
    "strict": 0
  }
}
